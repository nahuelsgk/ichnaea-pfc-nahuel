<table class="table">
 <thead>
   <th>Name</th>
   <th>&nbsp;</th>
 </thead>
 <tbody>
 {% for matrix in matrixs %}
   <tr>
   <td>
     {{matrix.name}}
   </td>
   <td>
   {% if is_granted('ROLE_SUPER_ADMIN') %}
     <a class="btn btn-mini" href="{{path('matrix_ui_edit', {'matrix_id': matrix.id})}}" name="edit_matrix" title="For Admins: Configure columns and samples">
     <i class="icon-edit"></i>
   {%  endif %}
   {% if view_enable == 'true' %}
     <a class="btn btn-mini" href="{{path('matrix_ui_view', {'matrix_id': matrix.id})}}" name="view_matrix" title="View this matrix">
       <i class="icon-eye-open"></i>
     </a>
   {% endif %}
   {% if matrix.visible == '0' %}
   {% else %}
     {% if train_enable == 'true' %}
       <a class="btn btn-mini" href="{{path('create_training_form', {'matrix_id': matrix.id})}}" name="create_training" title="Create training from this matrix">
       <i class="icon-road"></i>
     {% endif %}
     </a>
   {% endif %}
   {% if clone_enable == 'true' %}
     <a class="btn btn-mini" href="{{path('clone_matrix_form', {'matrix_id': matrix.id})}}" name="clone_matrix" title="Clone this matrix">
     <i class="icon-repeat"></i>
     </a>
   {% endif %}
   </td>
   </tr>
 {% endfor %}
 </tbody>
</table>
